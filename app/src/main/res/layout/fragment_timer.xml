<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <!--tools:context="com.isober.MainActivity$PlaceholderFragment">-->

    <LinearLayout
        android:id="@+id/timer_ring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_ring"
        android:orientation="horizontal" >
    </LinearLayout>

    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/timer_center"
        android:textSize="72sp" />

    <TextView
        android:id="@+id/textViewT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/timer_ring"
        android:layout_centerHorizontal="true"
        android:text="@string/timer_top"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/textViewB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timer_ring"
        android:layout_centerHorizontal="true"
        android:text="@string/timer_bottom"
        android:textSize="48sp" />


</RelativeLayout>
